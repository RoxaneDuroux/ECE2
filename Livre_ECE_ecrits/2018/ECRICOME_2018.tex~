{\bfseries \large \sffamily{Exercice 2}}
\par \noindent
\textbf{Partie I : Étude de deux suites}
\par \noindent
Pour tout entier naturel $n$ non nul, on pose : \quad $u_{n} =  \Sum{k
= 1}{n} \dfrac1k - \ln(n)$ \quad et \quad $v_{n} = u_{n}-\dfrac1n$.

\begin{noliste}{1.}
 \setlength{\itemsep}{4mm}
\item
Soit $f$ la fonction définie sur $\R^{+ *}$ par $f(x) = \dfrac1{x + 1}
+ \ln(x)-\ln(x + 1)$.
\begin{noliste}{a)}
 \setlength{\itemsep}{2mm}
\item Déterminer $ \dlim{x \to 0} f(x)$ et $ \dlim{x \to + \infty}
f(x)$.
\item Étudier les variations de la fonction $f$ sur $\R^{+ *}$ et
dresser son tableau de variations.
\item Démontrer que : \quad $\forall n \in \N^*, \quad u_{n + 1}-u_{n}
= f(n)$.
\item En déduire la monotonie de la suite $(u_{n})_{n\in \N^*}$.
\item Écrire une fonction d'en-tête : {\tt function y = u(n)} \quad qui
prend en argument un entier naturel $n$ non nul et qui renvoie la
valeur de $u_{n}$.
\end{noliste}
\item \begin{noliste}{a)}
 \setlength{\itemsep}{2mm}
\item Montrer que : \quad $\forall n \in \N^* \quad v_{n + 1}-v_{n} =
\dfrac1n - \ln \left(1 + \dfrac1n\right)$.
\item Montrer que pour tout réel $x$ positif : \qquad $\ln(1 + x) \leq
x$.\\
En déduire que la suite $(v_{n})_{n \in \N^*}$ est croissante.
\item Donner le développement limité d'ordre 2 de $\ln(1 + x)$ en $0$.
En déduire que :
\[
v_{n + 1}-v_{n} \underset{n\to + \infty}{\sim} \frac{1}{2n^{2}}
\]
\item Déterminer la nature de la série de terme général $v_{n +
1}-v_{n}$. On note $\gamma =  \Sum{n = 1}{+ \infty}(v_{n + 1}-v_{n})$.
\item Pour $n \geq 2$, simplifier la somme partielle : \quad $ \Sum{k =
1}{n-1} (v_{k + 1}-v_{k})$.\\
En déduire que la suite $(v_{n})_{n \geq 2}$ converge vers $\gamma$.
\end{noliste}

\item \begin{noliste}{a)}
 \setlength{\itemsep}{2mm}
\item {\itshape Déterminer } $ \dlim{n \to \infty} u_{n}$.
\item Montrer que \quad $\forall n \in \N^* \quad v_{n} \leq \gamma
\leq u_{n}$ \qquad puis que $\quad \forall n \in \N^* \quad |u_{n} -
\gamma| \leq \dfrac1n$
\item On rappelle que l'instruction {\tt floor(x)} renvoie la partie
entière d'un réel $x$ et on suppose que la fonction {\tt u} de la
question 1) e : a été correctement programmée. Expliquer l'intérêt et
le fonctionnement du script ci-dessous :
\begin{verbatim}
eps = input('Entrer un réel strictement positif : '}
n = floor(1/eps) + 1
disp(u(n))
\end{verbatim}
\end{noliste}
\end{noliste}
\noindent
\textbf{Partie II : Étude d'une série}
\par \noindent
Pour tout entier naturel $n$, on pose \quad $a_{n} = \dfrac1{n(2n-1)}$.
\begin{noliste}{1.}
 \setlength{\itemsep}{4mm}
\item Démontrer que la série de terme général $a_{n}$ converge.
\item \begin{noliste}{a)}
 \setlength{\itemsep}{2mm}
\item Justifier que : \qquad $ \forall n \in \N^*, \quad \Sum{k = 1}{n}
\dfrac1{2k-1} = \Sum{k = 1}{2n} \dfrac1k - \Sum{k = 1}{n} \dfrac1{2k}$.
\item Déterminer deux réels $\alpha$ et $\beta$ tels que : \qquad
$\forall n \in \N^*, \quad a_{n} = \dfrac{\alpha}n +
\dfrac{\beta}{2n-1}$.
\item En déduire que : \qquad $\forall n \in \N^*, \qquad  \Sum{k =
1}{n} a_{k} = 2 \Sum{k = n + 1}{2n} \dfrac1k$.
\end{noliste}
\item \begin{noliste}{a)}
 \setlength{\itemsep}{2mm}
\item Montrer que :\qquad $\forall n \in \N^*, \quad  \Sum{k = n +
1}{2n} \dfrac1k = u_{2n}-u_{n} + \ln(2)$\\
où $(u_{n})_{n \in \N^*}$ est la suite définie dans la partie I.
\item Calculer alors \quad $ \Sum{k = 1}{+ \infty} a_{k}$.
\end{noliste}
\item \begin{noliste}{a)}
 \setlength{\itemsep}{2mm}
\item Montrer que : \quad $\forall n \in \N^*, \quad  \Sum{k = n +
1}{2n} \frac{1}{k} = \frac{1}{n}\Sum{k = 1}{n}\frac{1}{1 +
\dfrac{k}{n}}$.
\item Retrouver alors le résultat de la question 3) b :
\end{noliste}
\end{noliste}

\par \vspace{0.5cm}
